<div class="pageheader">
  <h2><i class="fa fa-pencil-square-o"></i> Category <span>New</span></h2>
</div>
<div class="contentpanel">
  <%= render "cms/commons/error_messages", target: @category %>
  <div class="panel panel-dark">
    <div class="panel-heading">
      <h4 class="panel-title">Category</h4>
    </div>
    <div class="panel-body panel-body-nopadding">
      <%= form_for [:cms, @category], html: { class: 'form-horizontal form-bordered' } do |f| %>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'category.en_name' %></label>
          <div class="col-sm-6">
            <%= f.text_field :en_name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'category.zh_name' %></label>
          <div class="col-sm-6">
            <%= f.text_field :zh_name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'category.permalink' %></label>
          <div class="col-sm-6">
            <div class="input-group">
              <span class="input-group-addon">http://uklaomao.com/</span>
              <%= f.text_field :permalink, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'category.icon' %></label>
          <div class="col-sm-6">
            <%= f.file_field :icon, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 text-center">
            <%= f.submit 'Submit', class: 'btn btn-primary' %>&nbsp;
            <%= link_to 'Return', cms_categories_path, class: 'btn btn-default' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>