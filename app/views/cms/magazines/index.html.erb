<div class="pageheader">
  <h2><i class="fa fa-list"></i> Magazine <span>list</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="table-responsive">
    <table class="table table-dark table-striped mb30">
      <thead>
        <tr>
          <th><%= brac_t 'magazine.en_issue' %></th>
          <th><%= brac_t 'magazine.cover' %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @magazines.each do |magazine| %>
        <tr>
          <td><%= magazine.en_issue %></td>
          <td><%= image_tag magazine.cover.w160_h120_fl_q80.url %></td>
          <td class="table-action">
            <%= link_to raw('<i class="fa fa-file-text-o"></i>'), [:cms, magazine] %>
            <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_cms_magazine_path(magazine) %>
            <%= link_to raw('<i class="fa fa-trash-o"></i>'), [:cms, magazine], method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= brac_paginate @magazines %>
</div>