<div class="pageheader">
  <h2><i class="fa fa-list"></i> 球会管理 <span>列表</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-primary table-striped mb30">
          <thead>
            <tr>
              <th><%= brac_t 'venue.city' %></th>
              <th><%= brac_t 'venue.name' %></th>
              <th></th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <td colspan="3" class="table-paginate"><%= brac_paginate @venues %></td>
            </tr>
          </tfoot>
          <tbody>
            <% @venues.each do |venue| %>
            <tr>
              <td><%= venue.city.province.name %> - <%= venue.city.name %></td>
              <td><%= venue.name %></td>
              <td class="table-action">
                <%= link_to raw('<i class="fa fa-file-text-o"></i>'), [:cms, venue] %>
                <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_cms_venue_path(venue) %>
                <%= link_to raw('<i class="fa fa-trash-o"></i>'), [:cms, venue], method: :delete, data: { confirm: '确定要删除吗？' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>