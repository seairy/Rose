<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>UKLaomao</title>
    <%= stylesheet_link_tag 'frontend_v2', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <div class="top"></div>
          </div>
          <div class="col-xs-12">
            <ul class="navi">
              <li class="left"></li>
              <li class="logo">
                <%= image_tag 'frontend_v2/navi_logo.jpg' %>
              </li>
              <% @categories.each do |category| %>
              <li class="item">
                <%= link_to category.name(I18n.locale), category %>
              </li>
              <% end %>
              <li class="search"></li>
              <li class="right"></li>
            </ul>
          </div>
          <div class="col-xs-9">
            <div id="simple_carousel" class="carousel simple_scale animate_text simple_carousel_wrapper" data-ride="carousel" data-interval="5000" data-pause="hover">
              <ol class="carousel-indicators simple_carousel_indicators">
                <% @carousel_posts.each_with_index do |post, i| %>
                <li data-target="#simple_carousel" data-slide-to="<%= i %>"<%= raw(' class="active"') if i.zero? %>></li>
                <% end %>
              </ol>
              <div class="carousel-inner" role="listbox">
                <% @carousel_posts.each_with_index do |post, i| %>
                <div class="item<%= ' active' if i.zero? %>">
                  <%= image_tag(post.cover.w1800_h1350_fl_q80) %>
                  <div class="carousel-caption simple_carousel_caption simple_carousel_caption_center" data-animation="animated fadeInLeft">
                    <h1 class="text-left" data-animation="animated fadeInDown"><%= post.title(I18n.locale) %></h1>
                    <p class="text-left" data-animation="animated fadeInDown"><%= post.home_description(I18n.locale) %></p>
                    <a href="#" class="simple_carousel_transparent_button carousel-read-more" data-animation="animated fadeInDown"><%= t('view.post.read_more') %></a>
                  </div>
                </div>
                <% end %>
              </div>
              <a class="left carousel-control simple_carousel_control_left" href="#simple_carousel" role="button" data-slide="prev">
                <span class="fa fa-angle-left simple_carousel_control_icons" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control simple_carousel_control_right" href="#simple_carousel" role="button" data-slide="next">
                <span class="fa fa-angle-right simple_carousel_control_icons" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
          <div class="col-xs-3 home-side">
            <div class="home-flag">
              <%= image_tag('frontend_v2/shortcut_1.jpg', class: 'img-responsive') %>
            </div>
            <div class="home-magazine">
              <%= image_tag 'frontend_v2/magazine_demo.jpg', class: 'img-responsive' %>
              <h3>《英国老帽儿》第六期</h3>
            </div>
          </div>
          <div class="col-xs-10 col-xs-offset-1">
            <div class="home-subtitle">
              <%= image_tag 'frontend_v2/home_subtitle.jpg', class: 'img-responsive' %>
            </div>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="home-feature">
            <div class="row">
              <div class="col-xs-10 col-xs-offset-1">
                <%= image_tag 'frontend_v2/tag_feature.jpg' %>
                <div class="home-feature-canvas">
                  <div class="home-feature-large"><%= image_tag @carousel_posts[0].cover.w800_h600_fl_q80, class: 'img-responsive' %></div>
                  <div class="home-feature-small home-feature-f5d8b8">
                    <%= image_tag @carousel_posts[2].cover.w800_h600_fl_q80, class: 'img-responsive' %>
                    <h5><%= @carousel_posts[2].title(I18n.locale) %></h5>
                    <p class="description"><%= @carousel_posts[2].home_description(I18n.locale) %></p>
                  </div>
                  <div class="home-feature-small home-feature-3b3633">
                    <%= image_tag @carousel_posts[3].cover.w800_h600_fl_q80, class: 'img-responsive' %>
                    <h5><%= @carousel_posts[3].title(I18n.locale) %></h5>
                    <p class="description"><%= @carousel_posts[3].home_description(I18n.locale) %></p>
                  </div>
                  <div class="home-feature-small home-feature-5a798b">
                    <%= image_tag @carousel_posts[4].cover.w800_h600_fl_q80, class: 'img-responsive' %>
                    <h5><%= @carousel_posts[4].title(I18n.locale) %></h5>
                    <p class="description"><%= @carousel_posts[4].home_description(I18n.locale) %></p>
                  </div>
                  <div class="home-feature-small home-feature-dcdcdc">
                    <%= image_tag @carousel_posts[5].cover.w800_h600_fl_q80, class: 'img-responsive' %>
                    <h5><%= @carousel_posts[5].title(I18n.locale) %></h5>
                    <p class="description"><%= @carousel_posts[5].home_description(I18n.locale) %></p>
                  </div>
                  <div class="home-feature-large"><%= image_tag @carousel_posts[1].cover.w800_h600_fl_q80, class: 'img-responsive' %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="home-category">
            <h3><%= image_tag 'frontend_v2/tag_people.jpg' %></h3>
            <div class="row">
              <% @people_posts.each do |post| %>
              <div class="col-xs-4">
                <article>
                  <%= link_to image_tag(post.cover.w400_h300_fl_q80, class: 'img-responsive'), post %>
                  <div class="caption">
                    <h5><%= post.title(I18n.locale) %></h5>
                    <div class="description">
                      <%= sanitize(post.content(I18n.locale), tags: []).try(:truncate, 120) %>
                    </div>
                  </div>
                </article>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="home-category">
            <h3><%= image_tag 'frontend_v2/tag_place.jpg' %></h3>
            <div class="row">
              <% @place_posts.each do |post| %>
              <div class="col-xs-4">
                <article>
                  <%= link_to image_tag(post.cover.w400_h300_fl_q80, class: 'img-responsive'), post %>
                  <div class="caption">
                    <h5><%= post.title(I18n.locale) %></h5>
                    <div class="description">
                      <%= sanitize(post.content(I18n.locale), tags: []).try(:truncate, 120) %>
                    </div>
                  </div>
                </article>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="home-category">
            <h3><%= image_tag 'frontend_v2/tag_music.jpg' %></h3>
            <div class="row">
              <% @music_posts.each do |post| %>
              <div class="col-xs-4">
                <article>
                  <%= link_to image_tag(post.cover.w400_h300_fl_q80, class: 'img-responsive'), post %>
                  <div class="caption">
                    <h5><%= post.title(I18n.locale) %></h5>
                    <div class="description">
                      <%= sanitize(post.content(I18n.locale), tags: []).try(:truncate, 120) %>
                    </div>
                  </div>
                </article>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="home-archive">
            <h3><%= t('view.home.archive') %></h3>
            <div class="row">
              <div class="col-xs-10 col-xs-offset-1">
                <div class="row">
                  <% @popular_posts.each_with_index do |post, i| %>
                  <div class="col-xs-4">
                    <div class="home-archive-item">
                      <div class="row">
                        <div class="col-xs-2">
                          <div class="number"><%= i + 1 %></div>
                        </div>
                        <div class="col-xs-10">
                          <h5><%= link_to post.title(I18n.locale), post %></h5>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="home-expert">
            <%= image_tag 'frontend_v2/tag_team.jpg', class: 'center-block title' %>
            <div class="row">
              <% @experts.each do |expert| %>
              <div class="col-xs-2">
                <div class="home-expert-item">
                  <%= image_tag(expert.portrait.w340_h340_fl_q80, class: 'img-responsive img-thumbnail img-circle portrait') %>
                  <h5><%= expert.zh_name %></h5>
                  <h5><%= expert.en_name %></h5>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <div class="container footer">
        <div class="row">
          <div class="col-xs-2 footer-item logo">
          </div>
          <div class="col-xs-2 footer-item">
            <h4>subscribe</h4>
            <input type="text" />
          </div>
          <div class="col-xs-4 footer-item contact">
            <h4 class="text-center">contact</h4>
            <%= link_to image_tag('frontend/laomao.png', class: 'img-responsive center-block') %>
          </div>
          <div class="col-xs-3 col-xs-offset-1 footer-item follow">
            <h4>follow</h4>
            <%= image_tag('frontend_v2/wechat_qrcode.jpg', class: 'img-responsive') %>
          </div>
        </div>
      </div>
    </footer>
    <footer class="wrap-copyright">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <p class="text-center">© 2015 SPARKLE BRITAIN LTD. ALL RIGHTS RESERVED.</p>
            <%= image_tag('frontend/copyright_cn.png', class: 'img-responsive center-block') %>
          </div>
        </div>
      </div>
    </footer>
    <div class="language">
      <% if I18n.locale == :en %>
      <%= link_to image_tag('frontend/flag_cn.png'), url_for(locale: :zh) %>
      <p>中文</p>
      <% else %>
      <%= link_to image_tag('frontend/flag_en.png'), url_for(locale: :en) %>
      <p>English</p>
      <% end %>
    </div>
    <%= javascript_include_tag 'frontend_v2', 'data-turbolinks-track' => true %>
    <%= content_for :javascript %>
  </body>
</html>