<div class="container">
  <div class="row">
    <div class="col-md-2">
      <div class="home-popular">
        <div class="home-popular-header"><%= t('view.home.popular')%></div>
        <ul class="home-popular-posts">
          <% @posts[0..11].each do |post| %>
          <li><%= link_to post.title(I18n.locale), post %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <div class="home-carousel">
        <div id="home-carousel" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#home-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#home-carousel" data-slide-to="1"></li>
            <li data-target="#home-carousel" data-slide-to="2"></li>
            <li data-target="#home-carousel" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <% @posts[0..3].each_with_index do |post, i| %>
            <div class="item<%= ' active' if i.zero? %>">
              <%= image_tag(post.cover.w800_h600_fl_q80) %>
              <div class="carousel-caption">
                <h3><%= post.title(I18n.locale) %></h3>
                <p><%= post.home_description(I18n.locale) %></p>
              </div>
            </div>
            <% end %>
          </div>
          <a class="left carousel-control" href="#home-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#home-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
    <div class="col-md-2 home-ads">
      <div class="home-ad"></div>
      <div class="home-ad"></div>
      <div class="home-ad"></div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @posts[0..2].each do |post| %>
    <div class="col-sm-4 home-post">
      <%= render partial: 'post', locals: { post: post } %>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <div class="row">
        <% @posts[3..8].each do |post| %>
        <div class="col-sm-6 home-post">
          <%= render partial: 'post', locals: { post: post } %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="home-recommended">
        <div class="home-recommended-header"><%= t('view.home.recommended')%></div>
        <div class="home-recommended-posts">
          <% @posts[0..10].each do |post| %>
          <div class="home-recommended-post">
            <div class="row">
              <div class="col-sm-4">
                <%= image_tag(post.cover.w160_h120_fl_q80, class: 'img-responsive') %>
              </div>
              <div class="col-sm-8">
                <h3><%= link_to post.title(I18n.locale), post %></h3>
                <div class="time-ago">1 week ago</div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% @posts[9..23].each do |post| %>
    <div class="col-sm-4 home-post">
      <%= render partial: 'post', locals: { post: post } %>
    </div>
    <% end %>
  </div>
</div>