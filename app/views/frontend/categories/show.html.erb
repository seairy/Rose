<div class="container post-category">
  <div class="row">
    <div class="col-xs-11 col-xs-offset-1">
      <div class="row">
        <% @posts.each do |post| %>
        <div class="col-xs-4">
          <article>
            <%= link_to image_tag(post.cover.w400_h300_fl_q80, class: 'img-responsive'), post %>
            <div class="caption">
              <h3><%= link_to post.title(I18n.locale), post %></h3>
              <div class="category"><%= post.category.name(I18n.locale) %></div>
              <div class="description"><%= sanitize(post.content(I18n.locale), tags: []).try(:truncate, 80) %></div>
            </div>
          </article>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>