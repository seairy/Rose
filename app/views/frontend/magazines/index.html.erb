<div class="container magazine-list">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="row">
        <% @magazines.each do |magazine| %>
        <div class="col-sm-4 magazine">
          <article>
            <%= link_to image_tag(magazine.cover.w600_h800_fl_q80, class: 'img-responsive'), magazine.file.url, target: '_blank' %>
            <div class="description">
              <h3><%= link_to magazine.issue(I18n.locale), magazine.file.url, target: '_blank' %></h3>
            </div>
          </article>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>